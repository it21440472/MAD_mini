<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mycropmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/top_background_gradient"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">


        <android.support.constraint.ConstraintLayout
            android:layout_width="413dp"
            android:layout_height="209dp"
            android:background="@drawable/curve"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/mbtn"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:background="@color/cardview_shadow_end_color"
                app:srcCompat="@drawable/icmenu"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

        </android.support.constraint.ConstraintLayout>


        <ImageButton
            android:id="@+id/imageButton14"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="288dp"
            android:background="@drawable/iconback"
            android:scaleType="fitStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introcrop"
            app:srcCompat="@drawable/document" />

        <ImageButton
            android:id="@+id/imageButton15"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="288dp"
            android:background="@drawable/iconback"
            android:scaleType="fitStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introcrop"
            app:srcCompat="@drawable/vegetable" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="My Crops"
            android:textAlignment="center"
            android:textColor="@color/app_theme"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/mycropbtnmain"
            app:layout_constraintEnd_toEndOf="@+id/mycropbtnmain"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/mycropbtnmain"
            app:layout_constraintTop_toTopOf="@+id/mycropbtnmain"
            app:layout_constraintVertical_bias="0.935" />

        <ImageButton
            android:id="@+id/imageButton13"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/iconback"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.86"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introcrop"
            app:srcCompat="@drawable/transportation" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="Transport Services"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageButton13"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageButton13"
            app:layout_constraintTop_toTopOf="@+id/imageButton13" />

        <android.support.constraint.Guideline
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <TextView
            android:id="@+id/cropdash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Economic Crisis"
            android:textColor="#FDFDFD"
            android:textColorHighlight="#4FCF40"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/introcrop"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="&quot;...............................&quot;"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/signin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cropdash"
            app:layout_constraintVertical_bias="0.447" />

        <ImageButton
            android:id="@+id/mycropbtnmain"
            android:layout_width="159dp"
            android:layout_height="189dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/iconback"
            android:scaleType="fitStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introcrop"
            app:srcCompat="@drawable/plantcrop" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="My Crops"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/mycropbtnmain"
            app:layout_constraintEnd_toEndOf="@+id/mycropbtnmain"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/mycropbtnmain"
            app:layout_constraintTop_toTopOf="@+id/mycropbtnmain"
            app:layout_constraintVertical_bias="0.941" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="156dp"
            android:text="Reports"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/imageButton14"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageButton14"
            app:layout_constraintTop_toTopOf="@+id/imageButton14" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="156dp"
            android:text="Products"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/imageButton15"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageButton15"
            app:layout_constraintTop_toTopOf="@+id/imageButton15" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>